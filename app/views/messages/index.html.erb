
<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
  <div class="container">
    <div class="row">
      <div class="panel-body">
        <% @messages.each do |message| %>
          <div class="col-md-2">
            <span class="label label-info full-width"><%= message.name %></span>
          </div>
          
          <div class="col-md-1">
            <%= message.age %>
          </div>
          
          <div class="col-md-9">
            <%= message.body %>
          </div>
            <%= link_to "edit" , edit_message_path(message) %>
            <%= link_to "destroy" , message , method: :delete, data: { confirm: '削除してもよろしいですか？' } %>
          
          <br>
        <% end %>
      </div>
    </div>
  </div>
</div>

<%= render 'form' %>
<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
  <div class="container">
    <div class="row">
      <div class="panel-body">
        <% @messages.each do |message| %>
          <div class="col-md-2">
            <span class="label label-info"><%= message.name %></span>
          </div>
          <div class="col-md-10">
            <%= message.body %>
          </div>  
          <br>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <%= form_for @message , html:{ class:'form-horizontal' } do |f| %>
      <div class="form-group">
        <%= f.label :name, "名前:", class: "col-md-3 control-label" %>
        <div class="col-md-9">
           <%= f.text_field :name , class:"form-control" , placeholder:"name"%>
        </div>
      </div>
    
      <div class="form-group">
        <%= f.label :body, "内容:", class: "col-md-3 control-label" %>
        <div class="col-md-9">
          <%= f.text_area  :body, class:"form-control" ,placeholder:"something to say"%>
        </div>
      </div>
      
      <div class="form-group">
        <div class="col-sm-offset-3 col-sm-9">
            <%= f.submit "Create Message", class: "btn btn-sm btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>